<h1>Ipassets</h1>
<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />


<br />
<br />

<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>Name</th>
         <th>Download IP</th>
         <th>IP Description</th>
         <th>Status</th>
         <th>click to approve</th>
      </tr>
   </thead>
   
   <tbody>
      <% @ipassets.each do |ipasset| %>
         
         <tr>
            <td><%= ipasset.name %></td>
            <td><%= link_to "Download IP", ipasset.attachment_url %></td>
            <td><%= ipasset.Description %></td>
            <td><%= ipasset.status %></td>
            <td><%= link_to "Approve ", validate_path(ipasset.id), method: :post%></td>
         </tr>
         
      <% end %>
   </tbody>
   
</table>
